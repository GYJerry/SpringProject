<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Definition use constructor -->
	<bean id="textEditorUseConstructor" class="cn.simplemind.di.TextEditorUseConstructor" lazy-init="true">
		<constructor-arg ref="spellChecker" />
	</bean>
	
	<!-- Definition use setter -->
	<bean id="textEditorUseSetter" class="cn.simplemind.di.TextEditorUseSetter" lazy-init="true">
		<property name="spellChecker" ref="spellChecker"/>
	</bean>

	<!-- Definition for spellChecker bean -->
	<bean id="spellChecker" class="cn.simplemind.di.SpellChecker">
	</bean>

</beans>